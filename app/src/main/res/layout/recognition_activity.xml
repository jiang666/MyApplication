<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
              android:background="#303f9f"
                android:layout_height="match_parent"
                android:orientation="horizontal">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="0dp">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:id="@+id/camera_preview"
            android:layout_width="700dp"
            android:layout_height="0dp"
            android:layout_weight="70" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_width="wrap_content"
            android:textColor="@color/orange"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="请把脸放在圆圈内，并刷卡，识别会自动开始"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="卡号 :"
                android:textColor="@color/white"
                android:textSize="30dp"/>


            <EditText
                android:id="@+id/et_enter_cardNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:paddingStart="10dp"
                android:textSize="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text_background"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_capture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:clickable="true"/>
            <Button
                android:id="@+id/button_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="440dp"
                android:background="@drawable/applybt_bg"
                android:text="签到"
                android:textSize="40dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:background="#303f9f"/>
    <FrameLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:background="#3f51b5"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recognition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
        <ImageView
            android:layout_marginLeft="800dp"
            android:clickable="true"
            android:id="@+id/back_home"
            android:layout_height="60dp"
            android:layout_width="60dp"/>
    </FrameLayout>

</LinearLayout>