<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#303f9f"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="10"
            android:text="信息采集"
            android:textColor="@color/white"
            android:textSize="40dp"/>

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="800dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="72"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="5"
            android:text="请把脸放在圆圈内，点击开始进行拍照"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_capture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:clickable="true"/>

            <Button
                android:id="@+id/button_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="440dp"
                android:background="@drawable/applybt_bg"
                android:text="开始"
                android:textSize="40dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#3f51b5"
        android:layout_weight="4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textColor="@color/white"
                android:textSize="40dp"/>
            <ImageView
                android:layout_marginLeft="640dp"
                android:clickable="true"
                android:id="@+id/back_home"
                android:layout_height="60dp"
                android:layout_width="60dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="卡号 :"
                android:textColor="@color/white"
                android:textSize="30dp"/>


            <EditText
                android:id="@+id/et_enter_cardNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:paddingStart="10dp"
                android:textSize="30dp"
                android:layout_marginRight="120dp"
                android:background="@drawable/edit_text_background"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="姓名 :"
                android:textColor="@color/white"
                android:textSize="30dp"/>


            <EditText
                android:id="@+id/et_enter_name"
                android:layout_width="match_parent"
                android:textSize="30dp"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="120dp"
                android:background="@drawable/edit_text_background"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="性别 :"
                android:textColor="@color/white"
                android:textSize="30dp"/>

            <RadioButton
                android:id="@+id/rb_sex_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:checked="true"
                android:text="男"
                android:textSize="30dp"/>

            <RadioButton
                android:id="@+id/rb_sex_woman"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="女"
                android:textSize="30dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="图像 :"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/iv_enter_image"
            android:layout_marginTop="5dp"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:src="@drawable/defface"
            android:layout_width="wrap_content"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="40dp"
                android:background="@drawable/applybt_bg"
                android:text="取消"/>

            <Button
                android:id="@+id/btn_affirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="530dp"
                android:textSize="40dp"
                android:background="@drawable/applybt_bg"
                android:text="确定录入"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>