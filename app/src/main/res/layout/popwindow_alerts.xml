<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/alert_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/alert_background"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_alert_simple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="@string/download_alert"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alert_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:orientation="vertical"
            android:visibility="gone"
           >
            <!--android:visibility="gone"-->
            <TextView
                android:id="@+id/tv_alert_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingTop="32dp"
                android:textSize="16sp"
                android:text="You cannot connect more than one Bluetooth speaker to another."
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_alert_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:text="Find out more"
                android:textColor="#66FFFFFF" />
        </LinearLayout>
<!-- android:paddingTop="20dp"      android:paddingBottom="20dp"-->
        <LinearLayout
            android:id="@+id/alert_mul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_alert_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="32dp"
                    android:text="NO CONNECTION"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/tv_alert_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="34dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:text="You need to be connected to talk;he internet to use this app."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/alert_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/alert_button_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:background="@drawable/button_alert_selector_no"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:text="NO"
                        android:textColor="@drawable/text_alert_selector" />

                    <RadioButton
                        android:id="@+id/alert_button_yes"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_alert_selector_yes"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:text="YES"
                        android:textColor="@drawable/text_alert_selector" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_button_next"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:background="#666666"
                    android:clickable="true"
                    android:drawableRight="@drawable/forward_white"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="WI-FI SETTINGS"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
